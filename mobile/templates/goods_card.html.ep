    <!--scripts-->
    <script>
        $(function(){
            $('#main-banner').bxSlider({
                controls: false,
                adaptiveHeight: true,
                auto: true,
                pause: 5000
            });

            $('#carousel-like').bxSlider({
                slideWidth: 130,
                minSlides: 1,
                maxSlides: 20,
                slideMargin: 0,
                moveSlides: 3,
                pager: false
            });

            $('#carousel-featured').bxSlider({
                slideWidth: 130,
                minSlides: 1,
                maxSlides: 20,
                slideMargin: 0,
                moveSlides: 3,
                pager: false
            });
        })
    </script>
    <script>
        $(function(){
            $('#card-carousel').flexslider({
                animation: 'slide',
                minItems: 3,
                maxItems: 3,
                slideshow: false,
                itemWidth: 60,
                itemMargin: 0,
                move: 1,
                controlNav: false,
                asNavFor: '#card-slider'
            });

            $('#card-slider').flexslider({
                animation: "slide",
                directionNav: false,
                controlNav: false,
                animationLoop: false,
                slideshow: false,
                sync: "#card-carousel",
                after: function(){
                    //Выделение активного элемента карусели (карточка товара)
                    $('#card-slider').find('.slides').find('li').each(function(i){
                        if ($(this).hasClass('flex-active-slide')){
                            var $carousel = $('#card-carousel').find('.slides').find('li');
                            $carousel
                                .find('.__active').removeClass('__active')
                                .end().eq(i).find('.card-carousel_thumb').addClass('__active');

                            return this;
                        }
                    })
                }
            });
        });
    </script>
