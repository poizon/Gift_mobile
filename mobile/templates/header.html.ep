	<div id="menu_block">
		<ul id="menu">
    % for my $cat(@$cats) {
          % if ($cat->show) { 
	  <!-- если есть вложенные элементы и они не являются папкой (определяем это в скрипте) - то генерим всплывающее меню -->
	  % if($inner->{$cat->id_cat}) {
	  <li><span><%= $cat->name_cat %></span>
				<div class="menu_in"><ul>
				% my $array = $inner->{$cat->id_cat};
				% for my $item(@$array) {
				<li><a href="/<%= $item->[2] %>/<%= $item->[0] %>/<%= strip_lc($item->[1])%>.html" title="<%= $item->[1] %>"><%= $item->[1] %></a></li>
				%}
				</ul></div>
			</li>
	  %} else {
          <li><a href="/<%= $cat->url_cat %>.html" title="<%= $cat->name_cat %>"><%= $cat->name_cat %></a></li>
          %}
          %}
    %}
		</ul>
	</div>
    
    
